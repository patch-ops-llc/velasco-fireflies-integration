# env.example
# Copy to .env and fill in your values
# NEVER commit .env to version control!

# ==================== REQUIRED ====================

# Fireflies API Key (from https://app.fireflies.ai/integrations/custom/api)
FIREFLIES_API_KEY=your-fireflies-api-key

# DealCloud API Credentials
DEALCLOUD_CLIENT_ID=your-client-id
DEALCLOUD_API_KEY=your-api-key

# ==================== OPTIONAL ====================

# DealCloud Configuration
DEALCLOUD_BASE_URL=https://valescoind.dealcloud.com
FIREFLIES_API_URL=https://api.fireflies.ai/graphql

# Entry Type IDs (DealCloud specific)
INTERACTION_ENTRY_TYPE_ID=20843
CONTACT_ENTRY_TYPE_ID=20841
DEAL_ENTRY_TYPE_ID=20866
INTERACTION_TYPE_ID=1419522

# Internal email domains (comma-separated, skip for syncing)
INTERNAL_DOMAINS=valescoind.com,gmail.com,outlook.com,yahoo.com

# Sync Settings
TRANSCRIPT_LIMIT=10
RATE_LIMIT_DELAY=0.3
BATCH_SIZE=25
CRON_INTERVAL_MINUTES=360

# API Settings
API_TIMEOUT=30
MAX_RETRIES=3
RETRY_DELAY=2.0

# Environment
ENVIRONMENT=development
DEBUG=false
LOG_LEVEL=INFO

# API Key for protecting endpoints (optional but recommended)
API_KEY=your-secure-api-key

